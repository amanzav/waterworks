# Waterworks Configuration File
# Copy this file to ~/.waterworks/config.yaml and fill in your details

# User Profile
profile:
  # Path to your resume PDF
  resume_pdf: "/path/to/your/resume.pdf"
  
  # Cached resume text (auto-populated by setup wizard)
  resume_text: ""
  
  # Additional information to include in cover letters
  # This can be anything not in your resume that you want to mention
  additional_info: |
    Add any additional information here that you want to include
    in your cover letters but isn't in your resume.
    
    For example:
    - Specific interests or passions
    - Projects you've worked on
    - Skills you want to highlight
    - Career goals
  
  # Signature line for cover letters (leave empty for default "Sincerely")
  signature: "Your Name"

# Waterloo Works Credentials
# Leave password empty to be prompted securely at runtime
waterloo_works:
  username: "your.email@uwaterloo.ca"
  password: ""  # Leave empty for security - will prompt when needed

# Browser Configuration
browser:
  # Run browser in headless mode (true = hidden, false = visible)
  headless: false

# LLM Configuration
llm:
  # Provider: openai | anthropic | gemini | groq
  provider: "openai"
  
  # Model to use (provider-specific)
  model: "gpt-4o-mini"
  
  # API key - can also use environment variable (recommended)
  # Set OPENAI_API_KEY, ANTHROPIC_API_KEY, GOOGLE_API_KEY, or GROQ_API_KEY
  api_key: ""
  
  # Available models per provider (for reference)
  models:
    openai:
      - "gpt-4o"
      - "gpt-4o-mini"
      - "gpt-3.5-turbo"
    anthropic:
      - "claude-3-5-sonnet-20241022"
      - "claude-3-5-haiku-20241022"
    gemini:
      - "gemini-1.5-flash"
      - "gemini-1.5-pro"
    groq:
      - "llama-3.1-70b-versatile"
      - "llama-3.1-8b-instant"

# Paths
paths:
  # Where to save generated cover letters
  cover_letters_dir: "./cover_letters"
  
  # Cache directory for resume text and other data
  cache_dir: "~/.waterworks/cache"

# Defaults
defaults:
  # Default Waterloo Works folder name to use if not specified
  folder_name: "waterworks"
  
  # Default job board: full | direct
  # full = Full-Cycle Service (aligned with work terms)
  # direct = Employer-Student Direct (apply outside hiring cycles)
  job_board: "full"
